<StackPane prefHeight="640.0" prefWidth="1200.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.databrains.bi4ss.java.controllers.MainStartController">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="250.0" spacing="20.0" StackPane.alignment="TOP_LEFT">
         <children>
            <StackedBarChart fx:id="chartStackedBarPastYears" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="250.0" prefWidth="400.0" styleClass="cards-chart" title="Past years statistics">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </StackedBarChart>
            <VBox spacing="40.0">
               <children>
                  <Label styleClass="title" text="Welcome To BI4SS" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="txt-desc" text="Welcome to the BI4SS desktop app provided by the Databrains inc, in this tool you will find all the analysis we did about the university" textAlignment="CENTER" wrappingWidth="245.427734375" />
               </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
            </VBox>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/databrains_logo.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <VBox maxHeight="-Infinity" spacing="10.0" StackPane.alignment="BOTTOM_LEFT">
         <children>
            <Label styleClass="lbl-select-year" text="Choose a Year to continue analysis" />
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="cards-year-box">
                     <children>
                        <Label styleClass="cards-year-title" text="2015" />
                     </children>
                  </StackPane>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="cards-year-box">
                     <children>
                        <Label styleClass="cards-year-title" text="2014" />
                     </children>
                  </StackPane>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="cards-year-box">
                     <children>
                        <Label styleClass="cards-year-title" text="2013" />
                     </children>
                  </StackPane>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="cards-year-box">
                     <children>
                        <Label styleClass="cards-year-title" text="2012" />
                     </children>
                  </StackPane>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="cards-year-box">
                     <children>
                        <Label styleClass="cards-year-title" text="2011" />
                     </children>
                  </StackPane>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="cards-year-box">
                     <children>
                        <Label styleClass="cards-year-title" text="2010" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</StackPane>
